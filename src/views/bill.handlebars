<h1>Ticket</h1>
<h3>Code: {{data.code}}</h3>
<div><strong>Fecha Compra: </strong>{{data.date}}</div>
<div><strong>Comprador: </strong>{{data.user.email}}</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Thumbnail</th>
      <th scope="col">Code</th>
      <th scope="col">Quantity</th>
    </tr>
  </thead>
  <tbody id="productList">
    {{#each data.products}}
      <tr>
        <td>{{this.product.title}}</td>
        <td class="truncate">{{this.product.description}}</td>
        <td>${{this.price}}</td>
        <td><img class="thumbnail-img" src="{{this.product.thumbnail}}" alt="image" /></td>
        <td>{{this.product.code}}</td>
        <td>{{this.quantity}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

<div><strong>Total: </strong>{{data.total}}</div>
<button class="btn btn-secondary m-4" onclick="window.location.href = '/views/products/1'">Open Products</button>
<button class="btn btn-secondary m-4" onclick="window.location.href = '/views/cart'">Open Cart</button>
<button class="btn btn-secondary m-4" onclick="handleCheckout()">Checkout</button>
<input type="hidden" id="bid" name="bid" value="{{data._id}}" />
<button class="btn btn-secondary m-4" onclick="handleLogout()">Log out</button>

<script src="/js/bill.js"></script>