<div class="container">
  <h1>Login Page</h1>
  <form class="row g-3" id="loginForm" onsubmit="handleSubmit(); return false;">
    <div style="width: 100%" class="mt-3">
      <label for="username">Username</label>
      <input type="text" class="form-control" id="username" placeholder="Enter username" />
    </div>
    <div style="width: 100%" class="mt-3">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" placeholder="Enter password" />
    </div>
    <div class="col-md-12 mt-3">
      <label id="message" class="text-danger"></label>
    </div>
    <div class="m-3">
      <button id="submit" type="submit" class="btn btn-primary">Login</button>
    </div>

  </form>

  <a href="/session/github">
    <button id="loginGitHub" class="btn btn-secondary">Login with Github</button>
  </a>

  <div class="mt-3">
    <button
      class="btn btn-link"
      data-toggle="modal"
      data-target="#registerModal"
      id="register"
      onclick="handleRegister()"
    >If you don't have a user, please Register</button>
  </div>
  <div class="mt-3">
    <p>To reset your password<a href="/api/v1/recover"> Press here</a></p>
  </div>
</div>

<script src="/js/login.js"></script>